{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Interactive line chart showing median residential property prices in England (2000–2023)",
    "title": {
      "text": "Residential Property Prices in England (2000–2023)",
      "subtitle": "Source: HM Land Registry, UK",
      "subtitleFontStyle": "italic",
      "subtitleFontSize": 12,
      "anchor": "start",
      "color": "#FFFFFF",
      "font": "Trebuchet MS",
      "fontSize": 18
    },
    "width": 500,
    "height": 350,
    "background": "black",
    "data": {
      "url": "https://raw.githubusercontent.com/utolani25/utolani25.github.io/refs/heads/main/pp_england.csv"
    },
    "params": [
      {
        "name": "minYear",
        "value": 2000,
        "bind": {
          "input": "range",
          "min": 2000,
          "max": 2023,
          "step": 1,
          "name": "Start Year:",
          "style": "slider-label"
        }
      },
      {
        "name": "maxYear",
        "value": 2023,
        "bind": {
          "input": "range",
          "min": 2000,
          "max": 2023,
          "step": 1,
          "name": "End Year:",
          "style": "slider-label"
        }
      }
    ],
    "transform": [
      {
        "filter": "datum.year >= minYear && datum.year <= maxYear"
      }
    ],
    "encoding": {
      "x": {
        "field": "year",
        "type": "quantitative",
        "title": "Year",
        "axis": {
          "grid": true,
          "gridColor": "#444444",
          "gridDash": [2, 2],
          "format": "d",
          "labelFont": "Trebuchet MS",
          "labelFontSize": 12,
          "labelColor": "#FFFFFF",
          "titleFont": "Trebuchet MS",
          "titleFontSize": 14,
          "titleColor": "#FFFFFF"
        }
      },
      "y": {
        "field": "median_price",
        "type": "quantitative",
        "title": "Median Property Price (£)",
        "scale": {
          "nice": true
        },
        "axis": {
          "grid": true,
          "gridColor": "#444444",
          "gridDash": [2, 2],
          "labelFont": "Trebuchet MS",
          "labelFontSize": 12,
          "labelColor": "#FFFFFF",
          "titleFont": "Trebuchet MS",
          "titleFontSize": 14,
          "titleColor": "#FFFFFF",
          "tickCount": 6
        }
      }
    },
    "layer": [
      {
        "mark": {
          "type": "line",
          "color": "#1E90FF",
          "strokeWidth": 3
        },
        "encoding": {
          "x": { "field": "year", "type": "quantitative" },
          "y": { "field": "median_price", "type": "quantitative" }
        }
      },
      {
        "mark": {
          "type": "point",
          "color": "#1E90FF",
          "filled": true,
          "size": 60
        },
        "encoding": {
          "x": { "field": "year", "type": "quantitative" },
          "y": { "field": "median_price", "type": "quantitative" },
          "tooltip": [
            { "field": "year", "type": "quantitative", "title": "Year" },
            { "field": "median_price", "type": "quantitative", "title": "Median Price (£)" }
          ]
        },
        "params": [
          {
            "name": "hover",
            "select": {
              "type": "point",
              "fields": ["year"],
              "nearest": true,
              "on": "mouseover",
              "clear": "mouseout"
            }
          }
        ]
      }
    ],
    "config": {
      "style": {
        "slider-label": {
          "font": "Trebuchet MS",
          "fontSize": 13,
          "fontWeight": "normal",
          "color": "#FFFFFF"
        }
      }
    }
  }
  
